<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_app"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_app"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_topbar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notification"
            android:id="@+id/img_notification"
            android:layout_marginRight="10dp"></ImageView>
    </RelativeLayout>

</LinearLayout>
    </RelativeLayout>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance for notify"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance : 5 KM"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/txt_distance"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"></TextView>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:thumbTint="@color/white"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/seekbar"
        android:progress="5"
        android:minWidth="20dp"
       android:max="11"
        android:min="1"
        android:layout_marginTop="20dp"
        android:progressTint="#FF018786"
        android:progressBackgroundTint="@color/white"></SeekBar>




