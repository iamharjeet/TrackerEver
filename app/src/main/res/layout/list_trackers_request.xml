<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#185a9d">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img_user"
            android:src="@drawable/user_image"></com.mikhaellopez.circularimageview.CircularImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rohit"
                android:id="@+id/txt_name"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9815187258"
                android:id="@+id/txt_number"
                android:textColor="@color/white"></TextView>
        </LinearLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingVertical="10dp"
        android:id="@+id/btn_request"
        android:paddingHorizontal="20dp"
        android:layout_marginRight="10dp"
        android:text="Send Request"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/background_button_white_edges"></androidx.appcompat.widget.AppCompatButton>
</RelativeLayout>